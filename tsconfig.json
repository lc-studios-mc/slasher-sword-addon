{
  "compilerOptions": {
    "allowJs": true,
    "checkJs": true,
    "rootDir": "src/bp/scripts/",
    "target": "es2023",
    "lib": ["es2023"],
    "module": "nodenext",
    "moduleResolution": "nodenext",
    "forceConsistentCasingInFileNames": true,

    "noEmit": true,

    "strict": true,
    "useUnknownInCatchVariables": true,

    "skipLibCheck": true
  },
  "include": ["src/bp/scripts/**/*"]
}
